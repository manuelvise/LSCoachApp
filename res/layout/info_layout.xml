<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AuthenticationActivity" >

    <TextView
        android:id="@+id/infouser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewInfo"
        android:padding="7dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/infouser"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:text="User info"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infouser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:indeterminate="true"
        android:indeterminateOnly="true" />

    <Button
        android:id="@+id/buttonWeights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/infouser"
        android:layout_marginTop="71dp"
        android:layout_toLeftOf="@+id/buttonActivities"
        android:text="Weights" />

    <Button
        android:id="@+id/buttonGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonActivities"
        android:layout_alignParentRight="true"
        android:text="Goals" />

    <Button
        android:id="@+id/buttonActivities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonWeights"
        android:layout_toRightOf="@+id/textViewInfo"
        android:text="Activities" />

    <Button
        android:id="@+id/buttonApplicationCoach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonWeights"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="28dp"
        android:text="Go to Coach / Doctor application" />

</RelativeLayout>